<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Completed</th>
    <th>Start</th>
    <th>Expcomplete</th>
    <th>Desc</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.completed %></td>
    <td><%=h task.start %></td>
    <td><%=h task.expcomplete %></td>
    <td><%=h task.entry %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%# link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

